{
  "manifest_version": 3,
  "name": "Berlin Ticket Shark",
  "version": "1.0.0",
  "description": "Monitor Resident Advisor for ticket availability and get notified instantly",
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://ra.co/*",
    "https://api.telegram.org/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://ra.co/events/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["alert.mp3"],
      "matches": ["https://ra.co/*"]
    }
  ]
}
